{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true, // постепенный переход на TS
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src/**/*", "./declaration.d.ts",".eslintrc.js", "src/**/*.js"],
  "exclude": [
    "node_modules"
  ]
}
