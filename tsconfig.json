{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "./declaration.d.ts",".eslintrc.js", "src/**/*.js"],
  "exclude": [
    "node_modules"
  ],
}
