{
  "name": "sprint-1",
  "version": "1.0.0",
  "description": "",
  "source": "static/index.html",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "webpack-dev-server --open --config ./webpack.dev.conf.js",
    "build": "webpack --config ./webpack.build.conf.js",
    "fix": "npx eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint": "npx stylelint \"**/*.scss\" --fix",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts' "
  },
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "npm run fix",
      "npm run test"
    ],
    "*.{scss, css}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/jsdom": "21.1.0",
    "@types/mocha": "10.0.1",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "chai": "4.3.7",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.32.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-promise": "6.1.1",
    "file-loader": "6.2.0",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "^5.5.0",
    "husky": "8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "13.1.2",
    "mini-css-extract-plugin": "2.7.2",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "sass-loader": "13.2.0",
    "sinon": "^15.0.1",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "6.1.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0"
  },
  "targets": {
    "default": {
      "sourceMap": false,
      "engines": {
        "browsers": ">=50%"
      }
    }
  },
  "engines": {
    "node": ">=16.0"
  },
  "dependencies": {
    "express": "4.18.2",
    "uuid": "9.0.0"
  }
}
